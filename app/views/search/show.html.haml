%section
  .search
    %h1 Search Soundcloud using the form below
    = render partial: 'shared/form'

    %h1 Results for '#{params[:q]}'

    - if @search_page.results.empty?
      %h1 No results found.
    -else
      .results
        - @search_page.grouped_results.each do |type, results|
          .result-group
            %h1= type.titleize.pluralize
            %ul
              - results.each do |result|
                = link_to result[:uri] do
                  %li= result[:title] || result[:username]

  = render partial: 'shared/recent_searches', locals: {searches: @search_page.recent_searches}


